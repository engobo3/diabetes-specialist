rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isDoctor() {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/doctors/$(request.auth.uid));
    }

    function isPatient() {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/patients/$(request.auth.uid));
    }

    // Patients collection
    match /patients/{patientId} {
      // Patients can read/update their own data
      // Doctors can read their assigned patients
      // Caregivers can read their managed patients
      allow read: if isOwner(patientId) ||
                     isDoctor() ||
                     isAdmin() ||
                     (isAuthenticated() && resource.data.caregivers != null &&
                      request.auth.token.email in resource.data.caregivers);

      allow create: if isAuthenticated();
      allow update: if isOwner(patientId) || isDoctor() || isAdmin();
      allow delete: if isAdmin();
    }

    // Patient Identity (PII) - More restrictive
    match /patient_identity/{identityId} {
      allow read: if isOwner(identityId) || isAdmin();
      allow write: if isOwner(identityId) || isAdmin();
    }

    // Patient Medical (PHI)
    match /patient_medical/{medicalId} {
      allow read: if isOwner(resource.data.patientId) || isDoctor() || isAdmin();
      allow write: if isDoctor() || isAdmin();
    }

    // Doctors collection
    match /doctors/{doctorId} {
      // Public read for doctor discovery
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isOwner(doctorId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Appointments
    match /appointments/{appointmentId} {
      allow read: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid ||
        resource.data.doctorId == request.auth.uid ||
        isAdmin()
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid ||
        resource.data.doctorId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isAdmin();
    }

    // Messages
    match /messages/{messageId} {
      allow read: if isAuthenticated() && (
        resource.data.senderId == request.auth.uid ||
        resource.data.receiverId == request.auth.uid ||
        isAdmin()
      );
      allow create: if isAuthenticated() &&
                       request.resource.data.senderId == request.auth.uid;
      allow update: if isAuthenticated() && (
        resource.data.senderId == request.auth.uid ||
        resource.data.receiverId == request.auth.uid
      );
      allow delete: if isAdmin();
    }

    // Prescriptions
    match /prescriptions/{prescriptionId} {
      allow read: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid ||
        isDoctor() ||
        isAdmin()
      );
      allow create, update: if isDoctor() || isAdmin();
      allow delete: if isAdmin();
    }

    // Medical Records
    match /medical_records/{recordId} {
      allow read: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid ||
        isDoctor() ||
        isAdmin()
      );
      allow create, update: if isDoctor() || isAdmin();
      allow delete: if isAdmin();
    }

    // Vitals
    match /vitals/{vitalId} {
      allow read: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid ||
        isDoctor() ||
        isAdmin()
      );
      allow create: if isAuthenticated() &&
                       request.resource.data.patientId == request.auth.uid;
      allow update: if isOwner(resource.data.patientId) || isDoctor() || isAdmin();
      allow delete: if isAdmin();
    }

    // User Sessions
    match /user_sessions/{sessionId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId) || isAdmin();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // Transactions (Payments)
    match /transactions/{transactionId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin(); // Only admins can update (confirmations, refunds)
      allow delete: if isAdmin();
    }

    // Caregiver Invitations
    match /caregiver_invitations/{invitationId} {
      // Patient who created it can read
      // Caregiver (by email) can read
      // Doctors can read for approval
      allow read: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid ||
        resource.data.caregiverEmail == request.auth.token.email ||
        isDoctor() ||
        isAdmin()
      );
      allow create: if isAuthenticated() &&
                       request.resource.data.patientId == request.auth.uid;
      allow update: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid ||
        resource.data.caregiverEmail == request.auth.token.email ||
        isDoctor() ||
        isAdmin()
      );
      allow delete: if isOwner(resource.data.patientId) || isAdmin();
    }

    // Audit Logs (Admin only)
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Server-side only
    }

    // Documents/Files metadata
    match /documents/{documentId} {
      allow read: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid ||
        isDoctor() ||
        isAdmin()
      );
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.uploadedBy) || isAdmin();
    }

    // Users collection (for role management)
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}